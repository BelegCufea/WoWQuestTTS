<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
  <Frame name="QuestTTSAdvertisement" virtual="true">
    <Size y="190"/>
    <Frames>
      <Frame name="$parentSpam">
        <Size x="350" y="190"/>
        <Anchors>
          <Anchor point="BOTTOMLEFT" x="0" y="0"/>
        </Anchors>
        <Layers>
          <Layer level="BACKGROUND">
            <FontString
              inherits="GameFontNormal"
              justifyH="LEFT"
              justifyV="BOTTOM"
              text="Hello friend! I recently started a Twitch channel, I stream mostly WoW, Overwatch and programming tutorials (including WoW addons!)."
              wordwrap="true"
            >
              <Size y="50"/>
              <Anchors>
                <Anchor point="TOPLEFT" x="0" y="0"/>
                <Anchor point="BOTTOMRIGHT" x="0" y="90"/>
              </Anchors>
            </FontString>
            <FontString
              inherits="GameFontNormal"
              justifyH="LEFT"
              justifyV="BOTTOM"
              text="The stream is in italian but if you can leave a follow to support the channel it would be fantastic."
              wordwrap="true"
            >
              <Size y="50"/>
              <Anchors>
                <Anchor point="TOPLEFT" x="0" y="0"/>
                <Anchor point="BOTTOMRIGHT" x="0" y="50"/>
              </Anchors>
            </FontString>
            <FontString
              inherits="GameFontNormal"
              justifyH="LEFT"
              justifyV="BOTTOM"
              text="If you find any bug or you have an idea to improve the addon leave a comment on Curse or open an issue on GitHub, thank you :)"
              wordwrap="true"
            >
              <Size y="50"/>
              <Anchors>
                <Anchor point="TOPLEFT" x="0" y="0"/>
                <Anchor point="BOTTOMRIGHT" x="0" y="0"/>
              </Anchors>
            </FontString>
          </Layer>
        </Layers>
      </Frame>

      <Frame name="$parentSocials">
        <Size x="256" y="256"/>
        <Anchors>
          <Anchor point="BOTTOMRIGHT" x="0" y="-10"/>
        </Anchors>
        <Layers>
          <Layer level="BACKGROUND">
            <Texture name="$parentBackground" setAllPoints="true" file="Interface\AddOns\QuestTTS\assets\socials" />
          </Layer>
        </Layers>
      </Frame>
    </Frames>
  </Frame>
</Ui>
